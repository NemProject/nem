<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure id="Server" class="org.eclipse.jetty.server.Server">
	<Call name="addConnector">
		<Arg>
			<New class="org.eclipse.jetty.server.ServerConnector">
				<Arg name="server"><Ref refid="Server" /></Arg>
				<Set name="host"><Property name="jetty.host" /></Set>
				<Set name="port"><Property name="jetty.port" default="7890" /></Set>
				<Set name="idleTimeout"><Property name="http.timeout" default="300"/></Set>
			</New>
		</Arg>
	</Call>

	<Call id="logMgr" class="java.util.logging.LogManager" name="getLogManager">
    <Call name="readConfiguration">
      <Arg class="java.io.InputStream">
        <New class="java.io.FileInputStream">
          <Arg class="java.lang.String"><Property name="jetty.home" default="target/classes/"/>logging.properties</Arg>
        </New>
      </Arg>
    </Call>
  </Call>
</Configure> 
